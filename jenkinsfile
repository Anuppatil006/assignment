pipeline {
    agent any
    environment {
        IMAGE_NAME = 'node:14'
        REGISTRY = 'aws_account_id.dkr.ecr.region.amazonaws.com'
        REPOSITORY_URI = "${REGISTRY}/${IMAGE_NAME}"
        EC2_INSTANCE_ID = 'i-043d8645253e9d2ba'
        EC2_PUBLIC_IP = '13.201.22.249'
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Anuppatil006/vprofile-project.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    def dockerImage = docker.build("${REPOSITORY_URI}:latest")
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    docker.image("${REPOSITORY_URI}:latest").inside {
                        sh 'bash test.sh'
                    }
                }
            }
        }
        stage('Deploy') {
            steps stages {
        stage('Deploy') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ec2-ssh-key', keyFileVariable: 'SSH_KEY', usernameVariable: 'USER')]) {
                    script {
                        def command = """
                        ssh -i ${SSH_KEY} ${USER}@${EC2_PUBLIC_IP} 'docker pull my-app:latest && docker run -d -p 8080:8080 my-app:latest'
                        """
                        sh command
                    }
        }
    }
  }
}
    post {
        always {
            echo 'Cleaning up...'
            cleanWs()
        }
      }
    }
  }
}
